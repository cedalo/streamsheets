{
  "name": "@cedalo/gateway",
  "version": "1.4.0",
  "description": "Gateway server",
  "main": "start.js",
  "scripts": {
    "bundle": "npx webpack --config webpack.config.js",
    "test": "jest --verbose --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --forceExit --coverage",
    "lint": "./node_modules/.bin/eslint .",
    "retrieve-build-number": "node ./scripts/retrieve-build-number.js",
    "start": "node start.js",
    "start:min": "node start.min.js",
    "start-debug": "node --inspect=0.0.0.0 ./start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedalo/streamsheets.git"
  },
  "author": "Cedalo AG",
  "bugs": {
    "url": "https://github.com/cedalo/streamsheets/issues"
  },
  "homepage": "https://github.com/cedalo/streamsheets/tree/master/packages/gateway",
  "dependencies": {
    "@cedalo/error-codes": "*",
    "@cedalo/id-generator": "*",
    "@cedalo/logger": "*",
    "@cedalo/messages": "*",
    "@cedalo/messaging-client": "*",
    "@cedalo/protocols": "*",
    "@cedalo/repository": "*",
    "@cedalo/service-core": "*",
    "apollo-server-express": "^2.8.1",
    "axios": "0.18.1",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "compression": "1.7.1",
    "convict": "5.0.0",
    "cors": "2.8.4",
    "@cedalo/graphql": "*",
    "express": "4.16.4",
    "express-session": "1.16.1",
    "form-data": "2.4.0",
    "fs-extra": "7.0.1",
    "http-errors": "1.5.1",
    "ioredis": "4.6.2",
    "jasmine-expect": "^4.0.3",
    "jsonwebtoken": "7.4.1",
    "lodash": "4.17.13",
    "mkdirp": "0.5.1",
    "mongodb": "^3.3.0-beta2",
    "morgan": "1.9.1",
    "multer": "^1.4.2",
    "passport": "0.3.2",
    "passport-github": "1.1.0",
    "passport-google-oauth": "2.0.0",
    "passport-jwt": "2.2.1",
    "passport-ldapauth": "2.1.3",
    "passport-oauth2": "1.5.0",
    "passport-openid-connect": "0.1.0",
    "passport-openidconnect": "0.0.2",
    "supertest": "^4.0.2",
    "swagger-express-middleware": "^2.0.2",
    "uuid": "3.3.2",
    "ws": "7.1.0"
  },
  "devDependencies": {
    "@cedalo/jsg-core": "*",
    "@cedalo/machine-core": "*",
    "eslint": "4.18.2",
    "eslint-config-cedalo": "git+ssh://git@github.com/cedalo/eslint-config-cedalo.git",
    "eslint-config-prettier": "3.3.0",
    "jest": "19.0.1",
    "terser-webpack-plugin": "1.2.2",
    "webpack": "4.29.1",
    "webpack-cli": "3.2.3",
    "webpack-node-externals": "1.7.2"
  },
  "eslintConfig": {
    "extends": [
      "cedalo",
      "prettier"
    ]
  },
  "unmockedModulePathPatterns": [
    "jasmine-expect"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/test/"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 25,
        "lines": 40,
        "statements": 40
      }
    }
  },
  "license": "EPL-2.0"
}
