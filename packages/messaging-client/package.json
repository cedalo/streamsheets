{
  "name": "@cedalo/messaging-client",
  "version": "1.4.0",
  "description": "A client layer above the messaging client.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "./node_modules/.bin/jest --runInBand --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedalo/streamsheets.git"
  },
  "author": "Cedalo AG",
  "bugs": {
    "url": "https://github.com/cedalo/streamsheets/issues"
  },
  "homepage": "https://github.com/cedalo/streamsheets/tree/master/packages/messaging-client",
  "dependencies": {
    "@cedalo/id-generator": "*",
    "@cedalo/logger": "*",
    "mqtt": "3.0.0"
  },
  "devDependencies": {
    "eslint": "6.5.1",
    "eslint-config-cedalo": "git+ssh://git@github.com/cedalo/eslint-config-cedalo.git",
    "eslint-config-prettier": "3.3.0",
    "jest": "20.0.0",
    "jest-cli": "18.1.0",
    "sinon": "7.2.2"
  },
  "eslintConfig": {
    "extends": [
      "cedalo",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "global-require": 1,
      "no-undef": 1,
      "no-unused-vars": 1
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "license": "EPL-2.0"
}
